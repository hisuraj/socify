<div class="row">
    
    
  <div class="col-lg-3 well">
      <%= render 'shared/user_info' %>
      <div id="frens" class="col-lg-25 grey">
      <h3>Friends</h3>
      <hr>
        <%= render(@friends) || render('shared/no_resource') %>
      </hr>
    </div>
  </div>
  
   
 
  
  <div id="newsfeed" class="col-lg-6">
    <%= render 'posts/form' %>
    <br>
    <div id="activities">
      <% if @activities.empty? %>
        <div class="well">
          <%= render('shared/no_resource', resources: 'Activities') %>
        </div>
      <% else %>
        <%= render_activities(@activities, layout: '/shared/activity') %>
      <% end %>
    </div>
    <%= render 'shared/paginate', resources: @activities %>
  </div>
  
    

  <div class="col-lg-3">
    <%= render 'shared/links' %>
  </div>
  
</div>